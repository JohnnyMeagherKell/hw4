<div class="container">
<h1><%= @place["name"] %></h1>

<% if @current_user %>
  <h2>My Posts</h2>
  <% for post in @posts %>
    <% if post["user_id"] = @current_user %>
      <h3><%= post["title"] %></h3>
      <h4><%= post["posted_on"] %></h4>
      <p><%= post["description"] %></p>
    <% end %>
  <% end %>

  <p>
    <a class ="btn btn-success" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  </p>

  <p>
<% else %>
  You must first <a href="/login">login</a> to view posts.
<% end %>
  
<a href="/places">Back to All Places</a>
</p>
</div>