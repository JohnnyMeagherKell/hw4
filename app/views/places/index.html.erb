
<div class="container">
  <h2>Places</h2>
  <div class="m-3">
  <% if @current_user %>
  <ul>
    <% for place in @places %>
      <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
    <% end %>
  </ul>
  </div>
  <p>
    <a class="btn btn-primary" href="/places/new">New place</a>
  </p>
  <% else %>
  You must first <a href="/login">login</a> to view places.
  <% end %>
</div>
