<!DOCTYPE html>
<html>
  <head>
    <title>Travel Log</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
  </head>
<div class="text-bg-dark p-3">
  <body>
  <div class="position-relative">
  <div class="d-flex justify-content-center"><h1>Travel Log</h1></div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item white">
            <a class="nav-link active" href="/">Home</a>
          </li>
        </ul>
         
        <span class="navbar-text">
          <% if @current_user %>
            <li class="nav-item ">Logged in as: <%= @current_user["username"] %>       <a class="btn btn-danger"class="btn btn-danger" href="/logout">Logout</a> </li>
          <% else %>
            <a class="btn btn-info" href="/login">Login</a>
            <a class="btn btn-outline-info" href="/users/new">Signup</a>
          <% end %>
        </span>
      </div>
    </div>
</nav>



    <%= yield %>
    <script scr="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"> </script>
  </body>
</div>
</html>
